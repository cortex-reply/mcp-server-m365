  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Check if bearer token is set",
          "if (!pm.environment.get('bearerToken')) {",
          "    console.log('Warning: bearerToken not set in environment');",
          "    console.log('Please set the bearerToken variable with your Microsoft access token');",
          "    console.log('Use: npm run get-token to obtain a token');",
          "}"
        ]
      }
    }
